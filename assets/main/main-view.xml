<vbox width="100%" height="100%">
  <style>
    .main-view {
      width: 100%;
      height: 100%;
    }
  </style>
  <topmenu id="topMenu" verticalAlign="top"></topmenu>
  <box width="100%" height="30">
    <window-list id="windowList" height="30" />
  </box>
  <box id="workspace" width="100%" height="100%">
    <splitter id="splitView" width="100%" height="100%">
      <maplist id="mapList" width="15%" height="100%"></maplist>
      <mapeditor id="mapEditor" width="85%"></mapeditor>
    </splitter>
  </box>
  <statusbar id="statusBar"></statusbar>
</vbox>