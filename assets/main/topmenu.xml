<vbox width="100%">
  <menubar width="100%">
    <menu text="{{menu.file}}" id="fileMenu">
      <menuitem text="{{menu.new}}" shortcutText="Ctrl+N" />
      <menuitem text="{{menu.open}}" shortcutText="Ctrl+O" />
      <menuitem text="{{menu.save}}" shortcutText="Ctrl+S" />
      <menuseparator />
      <menuitem text="{{menu.exit}}" shortcutText="Ctrl+Q" />
    </menu>
    
    <menu text="{{menu.edit}}">
      <menuitem text="{{menu.undo}}" shortcutText="Ctrl+Z" />
      <menuitem text="{{menu.redo}}" shortcutText="Ctrl+Y" />
      <menuseparator />
      <menuitem text="{{menu.cut}}" shortcutText="Ctrl+X" />
      <menuitem text="{{menu.copy}}" shortcutText="Ctrl+C" />
      <menuitem text="{{menu.paste}}" shortcutText="Ctrl+V" />
      <menuseparator />
      <menuitem text="{{menu.zoomin}}" shortcutText="Ctrl+=" />
      <menuitem text="{{menu.zoomout}}" shortcutText="Ctrl+-" />
    </menu>
    
    <menu text="{{menu.tools}}">
      <menuitem text="{{menu.database}}" shortcutText="F9" />
      <menuitem text="{{menu.plugins}}" shortcutText="F10" />
      <menuseparator />
      <menuitem text="{{menu.textManager}}" shortcutText="F2" />
      <menuitem text="{{menu.audioManager}}" shortcutText="F3" />
      <menuitem text="{{menu.pictureManager}}" shortcutText="F4" />
    </menu>
    
    <spacer width="100%" />
    
    <menu text="{{menu.help}}">
      <menuitem text="{{menu.wiki}}" />
      <menuseparator />
      <menuitem text="{{menu.about}}" />
    </menu>
  </menubar>
</vbox>