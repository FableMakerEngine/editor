<?xml version="1.0" encoding="utf-8"?>
<vbox height="100%" width="100%">
  <toolbar id="toolbar"></toolbar>
  <splitter id="splitView" width="100%" height="100%">
    <splitter id="mapListSplitter" direction="vertical" width="15%" height="100%">
      <maps-panel id="mapListPanel" width="100%" height="60%"></maps-panel>
      <layer-panel id="layerPanel" width="100%" height="40%"></layer-panel>
    </splitter>
    <splitter id="tilesetSplitter" direction="vertical" width="100%" height="100%">
      <tabview id="workspace" width="100%" height="60%" closable="true">
        <box id="mapeditor" text="Map Editor" width="100%" height="100%"
          icon="haxeui-core/styles/default/haxeui_tiny.png">
          <tilemap id="tilemapView" width="100%" height="100%"></tilemap>
        </box>
        <box text="Database" icon="haxeui-core/styles/default/haxeui_tiny.png" width="100%"
          height="100%">
          <hbox width="100%" height="100%">
            <variable-view id="localvariable" width="30%" height="100%"></variable-view>
            <spacer width="2%" />
            <variable-view id="globalvariable" width="30%" height="100%"></variable-view>
          </hbox>
        </box>
        <box text="Plugins" icon="haxeui-core/styles/default/haxeui_tiny.png">
          <button text="Page 3" />
        </box>
        <box text="Settings" icon="haxeui-core/styles/default/haxeui_tiny.png">
          <button text="Page 4" />
        </box>
      </tabview>
      <tile-picker id="tilePicker" width="100%" height="40%"></tile-picker>
    </splitter>
  </splitter>
</vbox>