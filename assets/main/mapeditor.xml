<?xml version="1.0" encoding="utf-8"?>
<vbox height="100%" width="100%">
  <style>
    .scroll .button {
    width: 14px;
    height: 14px;
    }

    .vertical-scroll {
    width: 14px;
    }

    .horizontal-scroll {
    height: 14px;
    }
  </style>
  <splitter id="splitView" width="100%" height="100%">
    <box width="25%" height="100%">
      <splitter id="tilesetSplitter" direction="vertical" width="100%" height="100%">
        <tile-picker id="tilePicker" width="100%" height="40%"></tile-picker>
        <maplist id="mapList" width="100%" height="60%"></maplist>
      </splitter>
    </box>
    <tabview id="workspace" width="85%" height="100%" closable="true">
      <box id="mapeditor" text="Map Editor" width="100%" height="100%"
        icon="haxeui-core/styles/default/haxeui_tiny.png">
        <scrollview height="100%" width="100%">
          <box id="tileView"></box>
        </scrollview>
      </box>
      <box text="Database" icon="haxeui-core/styles/default/haxeui_tiny.png">
        <button text="Page 2" />
      </box>
      <box text="Plugins" icon="haxeui-core/styles/default/haxeui_tiny.png">
        <button text="Page 3" />
      </box>
      <box text="Settings" icon="haxeui-core/styles/default/haxeui_tiny.png">
        <button text="Page 4" />
      </box>
    </tabview>
  </splitter>
</vbox>